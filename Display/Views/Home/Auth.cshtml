@model Display.Models.AuthModel
@{
    ViewBag.Title = "Auth";
}

<div class="container">
    <div class="page-header">
        <h1>Box.net Authentication</h1>
    </div>
    @if (Model.IsAuthorized)
    {
        <div>
            Your box account has been successfully connected.
            <hr />
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-sm-2">Access Token</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Authorization.AccessToken</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Refresh Token</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Authorization.RefreshToken</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Expires In</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Authorization.ExpiresIn</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Created On</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Authorization.CreatedOn.ToLocalTime().ToString("M/d/yyyy h:mm:ss tt")</p>
                    </div>
                </div>
            </div>
            <hr />
            <div style="margin-top: 20px;">
                @Html.ActionLink("Refresh", "AuthRefresh", null, new { @class = "btn btn-default" })
                @Html.ActionLink("Revoke", "AuthRevoke", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
    else
    {
        <div>A Box account has not been connected.</div>
        <div style="margin-top: 20px;">@Html.ActionLink("Connect", "AuthConnect", null, new { @class = "btn btn-default" })</div>
    }
</div>

